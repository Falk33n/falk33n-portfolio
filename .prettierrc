{
	"useTabs": true,
	"singleQuote": true,
	"bracketSameLine": false,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"semi": true,
	"svelteBracketNewLine": true,
	"svelteStrictMode": true,
	"singleAttributePerLine": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"printWidth": 80,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
